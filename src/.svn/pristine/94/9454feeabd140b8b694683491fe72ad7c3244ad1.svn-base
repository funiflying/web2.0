<style>
    .modal-dialog{
        width: 500px;
    }
</style>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" ng-click="cancel()">
        <i class="glyphicon glyphicon-remove"></i>
    </button>
    <header>
        <div class="clearfix">
            <h3 class="modal-title">申请撤单</h3>
        </div>
    </header>
</div>
<div class="modal-body  clearfix">
    <form name="saleoffForm"  class="form-horizontal" novalidate>
        <div class="form-group">
            <label  class="control-label col-md-3">商品名称</label>
            <div class="col-md-9">
                <p class="form-control-static" ng-bind="calcel_order.BrandName+calcel_order.SpecName"></p>
            </div>
        </div>
        <div class="form-group">
            <label  class="control-label col-md-3">下单时间</label>
            <div class="col-md-9">
                <p class="form-control-static" ng-bind="calcel_order.OrderTime|DateFormat:'yyyy-MM-dd'"></p>
            </div>
        </div>
        <div class="form-group">
            <label  class="control-label col-md-3">订单编号</label>
            <div class="col-md-9">
                <p class="form-control-static" ng-bind="calcel_order.OrderCode"></p>
            </div>
        </div>
        <div class="form-group">
            <label  class="control-label col-md-3 form-required">撤单原因</label>
            <div class="col-md-8">
                <textarea name="" id=""  cols="6" rows="5" class="form-control" ng-model="RevokeMemo" required></textarea>
            </div>
        </div>

    </form>
</div>
<div class="modal-footer clearfix ">
    <div class="alert {{alert.type}} text-center" ng-bind="alert.msg" ng-show="alert.msg"></div>
    <div class="col-md-6 col-md-offset-3">
        <button class="btn btn-info btn-block" ng-click="cancelOrder()" ng-disabled="saleoffForm.$invalid">
            提交
        </button>
    </div>
</div>